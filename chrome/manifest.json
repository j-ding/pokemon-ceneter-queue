{
  "manifest_version": 3,
  "name": "Pokemon Center Queue Monitor",
  "version": "1.0",
  "description": "Shows your position in the Pokemon Center queue",
  "permissions": [
    "webRequest",
    "webNavigation",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*.pokemoncenter.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.pokemoncenter.com/*"],
      "js": ["content.js"]
    }
  ]
}